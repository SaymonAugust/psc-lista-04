import java.util.Scanner;

public class CrescimentoPopulacionalInterativo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        char repetir;

        do {
            double populacaoA, populacaoB, taxaA, taxaB;
            int anos = 0;

            // ======= LEITURA E VALIDAÇÃO =======
            System.out.println("=== CRESCIMENTO POPULACIONAL ===");

            // População A
            do {
                System.out.print("Informe a população do país A: ");
                populacaoA = sc.nextDouble();
                if (populacaoA <= 0) {
                    System.out.println("A população deve ser maior que zero!");
                }
            } while (populacaoA <= 0);

            // População B
            do {
                System.out.print("Informe a população do país B: ");
                populacaoB = sc.nextDouble();
                if (populacaoB <= 0) {
                    System.out.println("A população deve ser maior que zero!");
                }
            } while (populacaoB <= 0);

            // Taxa A
            do {
                System.out.print("Informe a taxa de crescimento anual do país A (em %): ");
                taxaA = sc.nextDouble();
                if (taxaA < 0) {
                    System.out.println("A taxa não pode ser negativa!");
                }
            } while (taxaA < 0);

            // Taxa B
            do {
                System.out.print("Informe a taxa de crescimento anual do país B (em %): ");
                taxaB = sc.nextDouble();
                if (taxaB < 0) {
                    System.out.println("A taxa não pode ser negativa!");
                }
            } while (taxaB < 0);

            // ======= CÁLCULO =======
            double taxaAdecimal = taxaA / 100;
            double taxaBdecimal = taxaB / 100;

            // Enquanto A for menor que B, calcular crescimento
            while (populacaoA < populacaoB) {
                populacaoA += populacaoA * taxaAdecimal;
                populacaoB += populacaoB * taxaBdecimal;
                anos++;
            }

            // ======= RESULTADO =======
            System.out.println("\nRESULTADO:");
            System.out.println("Serão necessários " + anos + " anos para que o país A ultrapasse ou iguale o país B.");
            System.out.printf("População final de A: %.0f habitantes\n", populacaoA);
            System.out.printf("População final de B: %.0f habitantes\n\n", populacaoB);

            // ======= PERGUNTAR SE DESEJA REPETIR =======
            System.out.print("Deseja fazer outro cálculo? (S/N): ");
            repetir = sc.next().toUpperCase().charAt(0);
            System.out.println();

        } while (repetir == 'S');

        System.out.println("Programa encerrado. Até mais!");
        sc.close();
    }
}
