import java.util.Scanner;

public class MaiorNumero {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int numero;
        int maior = Integer.MIN_VALUE; // começa com o menor valor possível

        System.out.println("=== Descubra o maior número ===");

        for (int i = 1; i <= 5; i++) {
            System.out.print("Digite o " + i + "º número: ");
            numero = sc.nextInt();

            // Verifica se este número é maior que o atual "maior"
            if (numero > maior) {
                maior = numero;
            }
        }

        System.out.println("\nO maior número digitado foi: " + maior);

        sc.close();
    }
}
